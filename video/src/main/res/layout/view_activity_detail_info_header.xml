<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/custom_drawable_place_holder">


    <TextView
        android:id="@+id/tv_view_activity_detail_info_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="包贝尔"
        android:textColor="@color/white"
        android:textSize="22sp" />


    <com.example.commonlibrary.cusotomview.RoundAngleImageView
        android:id="@+id/iv_view_activity_detail_info_header_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitCenter" />


</RelativeLayout>