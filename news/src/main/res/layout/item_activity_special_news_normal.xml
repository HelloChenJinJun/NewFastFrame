<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/base_color_text_grey"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        android:id="@+id/iv_item_activity_special_news_display"/>



    <com.flyco.labelview.LabelView
        android:visibility="gone"
        android:id="@+id/lv_item_activity_special_news_label"
        app:lv_text_size="12sp"
        app:lv_text="专题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lv_fill_triangle="true"/>

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_item_activity_special_news_title"
        android:layout_toRightOf="@+id/iv_item_activity_special_news_display"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="@color/base_color_text_black"
        android:layout_marginLeft="10dp"
        />


    <TextView
        android:textSize="12sp"
        android:textColor="@color/base_color_text_grey"
        android:id="@+id/tv_item_activity_special_news_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_item_activity_special_news_title"
        android:layout_alignBottom="@+id/iv_item_activity_special_news_display"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:textColor="@color/base_color_text_grey"
        android:id="@+id/tv_item_activity_special_news_time"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_item_activity_special_news_from"/>
</RelativeLayout>